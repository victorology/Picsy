
<%= expired_header item %>

<div class="post_content"> 
	<div class="photo"> 
		<%= link_to image_tag(item.true_image_url, :size => "200x125", :alt => File.basename(item.true_image_url)), item.url, :target => "_blank" %>
	</div> <!-- .photo --> 
	<div class="description"> 
		<h2><%= link_to item.title, item.url, :target => "_blank" %> </h2>

		<div class="sold"><%= "구매자수: #{item.sales_cnt}" if item.sales_cnt and item.sales_cnt > 0 %></div>

		<div class="expire"><%= item.time_left %></div> 
		<div class="price"><%= number_to_currency item.deal_price %>원</div> 
		<div class="original_price"><%= number_to_currency item.original_price %>원</div> 
		<div class="discount"><%= item.discount %>% 할인</div>
	</div> <!-- .description --> 
</div> <!-- .post_content -->

<div class="divider"></div> 
