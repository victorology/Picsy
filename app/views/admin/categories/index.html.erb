<h1>Listing Locations</h1>

<table>
  <tr>
	  <td>ID</id>
    <td>Name</td>
    <td>Parent</td>
    <td colspan=2></td>
  </tr>

<% @categories.each do |category| %>
  <tr>
	  <td><%= category.id %></td>
    <td><%= category.name %></td>
    <td><%= category.parent.try(:name) %></td>
    <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
    <td><%= link_to 'Destroy', admin_category_path(category), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

