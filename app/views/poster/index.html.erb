<h2>Registration Step 2 API</h2>

<% form_for :user, :url => personalization_user_creation_path(:format => "json") do |f| %>
	<p>Nickname : <br /> 
	<%= f.text_field :nickname %> </p>
	
	<p> Email : <br />
	<%= f.text_field :email %> </p>
	
	<p> Password :<br />
	<%= f.password_field :password %> </p>
	<%= submit_tag "Send" %>
<% end %>	

